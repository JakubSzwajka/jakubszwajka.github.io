---
const today = new Date();
---

<footer class="footer-strip">
	<div>&copy; {today.getFullYear()} KUBA SZWAJKA</div>
	<div>
		<i class="ph-fill ph-lightning" style="color: var(--accent)"></i> POWERED BY CAFFEINE
	</div>
</footer>

<style>
	.footer-strip {
		border-top: 1px solid var(--border-color);
		padding: 2rem 4rem;
		display: flex;
		justify-content: space-between;
		align-items: center;
		font-size: 0.8rem;
		color: var(--text-dim);
		text-transform: uppercase;
	}

	@media (max-width: 600px) {
		.footer-strip {
			padding: 1.5rem 1rem;
			flex-direction: column;
			gap: 0.5rem;
			text-align: center;
		}
	}
</style>
