---
import { GITHUB_URL, LINKEDIN_URL, EMAIL } from '../consts';
---

<nav class="nav-strip">
	<a href={GITHUB_URL} class="nav-link" target="_blank">
		<i class="ph-bold ph-github-logo"></i> GitHub
	</a>
	<a href={LINKEDIN_URL} class="nav-link" target="_blank">
		<i class="ph-bold ph-linkedin-logo"></i> LinkedIn
	</a>
	<a href={`mailto:${EMAIL}`} class="nav-link">
		<i class="ph-bold ph-envelope-simple"></i> Email
	</a>
	<a href="#" class="nav-link status-link">
		Status: Available
	</a>
</nav>

<style>
	.nav-strip {
		border-bottom: 1px solid var(--border-color);
		padding: 1rem 2rem;
		display: flex;
		gap: 2rem;
		font-size: 0.9rem;
		text-transform: uppercase;
		letter-spacing: 1px;
		overflow-x: auto;
	}

	.nav-link {
		text-decoration: none;
		color: var(--text-dim);
		transition: color 0.2s;
		white-space: nowrap;
	}

	.nav-link:hover {
		color: var(--accent);
		font-weight: 700;
		text-decoration: none;
	}

	.nav-link i {
		margin-right: 5px;
	}

	.status-link {
		margin-left: auto;
		color: var(--accent);
	}

	@media (max-width: 600px) {
		.nav-strip {
			padding: 1rem;
			gap: 1rem;
			font-size: 0.8rem;
		}
	}
</style>
